{
  "name": "tuvi-ai-web",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development tsx watch server/index.ts",
    "dev:client": "cd client && vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --outfile=server/dist/index.js --external:mysql2",
    "start": "cross-env NODE_ENV=production node server/dist/index.js",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "db:push": "drizzle-kit push:mysql",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.0",
    "esbuild": "^0.19.12",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "vitest": "^1.2.2"
  }
}
